{
  "compilerOptions": {
    "rootDir": "src",
    "sourceMap": true,
    "target": "es2022",
    "outDir": "build",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "build"]
}
